{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,

        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "utility-scripts"
    ]
}
